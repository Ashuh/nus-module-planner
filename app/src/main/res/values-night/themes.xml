<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NUSModulePlanner" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorOnPrimary">@color/dark_onPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondaryVariant</item>
        <item name="colorOnSecondary">@color/dark_onSecondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/dark_background</item>
        <item name="colorError">@color/dark_error</item>
        <item name="colorOnError">@color/dark_onError</item>
        <item name="colorSurface">@color/dark_surface</item>
        <item name="colorOnSurface">@color/dark_onSurface</item>
        <item name="colorOnBackground">@color/dark_onBackground</item>
        <item name="colorOnBackgroundSelected">@color/dark_colorOnBackgroundSelected</item>
        <item name="android:titleTextColor">@color/amber_900</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>
