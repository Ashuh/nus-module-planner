<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NUSModulePlanner" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondaryVariant</item>
        <item name="colorOnSecondary">@color/onSecondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/dark_onError</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/onSurface</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/onBackground</item>
        <item name="colorOnBackgroundSelected">@color/colorOnBackgroundSelected</item>
        <item name="android:titleTextColor">@color/amber_900</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Theme.NUSModulePlanner.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.NUSModulePlanner.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.NUSModulePlanner.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.NUSModulePlanner.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.NUSModulePlanner.NoActionBar</item>
        <item name="windowSplashScreenBackground">@color/ic_launcher_background</item>
    </style>
</resources>
